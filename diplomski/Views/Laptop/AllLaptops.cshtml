@model IEnumerable<diplomski.Models.Laptop>

@{
    ViewBag.Title = "AllLaptops";
}

<h2>AllLaptops</h2>

<p>
    @Html.ActionLink("Create New", "AddLaptop")
</p>
<table class="table">
    <tr>
        <th>
