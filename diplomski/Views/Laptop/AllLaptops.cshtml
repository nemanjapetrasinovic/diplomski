    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LanMacAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WifiMacAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WiFiNetworkName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { name = item.name, LanMacAddress = item.LanMacAddress, WiFiMacAddress=item.WifiMacAddress }) |
            @Html.ActionLink("Details", "Details", new { name = item.name, LanMacAddress = item.LanMacAddress, WiFiMacAddress = item.WifiMacAddress }) |
